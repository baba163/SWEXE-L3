<h1>Twetter みたいなやつ</h1>
<p>つぶやいてみよう</p>
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |tweet| %>
    <p>
        <%= tweet.message %>, <%= tweet.tdate %>,
        <%
            pt = (Time.now - tweet.tdate) / 60
            ptm = pt.round
        %>
        <%= ptm %> 分経過
        <%= link_to '表示', "/tweets/#{tweet.id}" %>
        <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
        <%= link_to '編集', "/tweets/#{tweet.id}/edit" %>
    </p>
<% end %>
<p><%= link_to '新規追加', '/tweets/new' %></p>
